# Environment variables for audit agent

# Server settings
PORT=8080
HOST=0.0.0.0

# Database settings
DB_URL=sqlite:////app/state/agent.db

# Data storage
DATA_DIR=/app/data

# Worker settings
WORKER_POOL_SIZE=4
JOB_HARD_TIMEOUT_SEC=1200

# OpenRouter settings (optional - if not set, DRY_RUN mode is enabled)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Logging
LOG_LEVEL=info

# Dry run mode (auto-enabled if no API key)
DRY_RUN=true

# Application version
VERSION=1.0.0
